{
  "manifest_version": 2,
  "name": "Shuffler",
  "version": "0.1",
  "author": "Koustav Samaddar",

  "description": "Shuffles the mid-section of all words on a page.",

  "icons": {
    "48": "icons/shuffler-48.png",
    "96": "icons/shuffler-96.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shuffler.js"]
    }
  ],

  "applications": {
    "gecko": {
	  "id": "ks-shuffler@mdn.com"
    }
  }
}
